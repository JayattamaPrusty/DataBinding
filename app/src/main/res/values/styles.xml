<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="BaseAppTheme" />

  <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/sa_green</item>
    <item name="colorAccent">@color/sa_accent</item>
  </style>

  <style name="Status" parent="TextAppearance.AppCompat.Body1" />

  <style name="Status.Name">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/dark_text</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Status.ScreenName">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/grey_text</item>
  </style>

  <style name="Status.Text">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/dark_text</item>
  </style>

</resources>
